@{
    Layout = "_Layout";
    ViewData["Title"] = "Generar Reporte por Fecha";
}

<div class="flex items-center justify-center bg-gray-100 p-6">
    <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

        <p class="text-lg text-gray-600 mb-8">Seleccione la fecha para generar su reporte:</p>

        <form method="get" action="/pdf/reporte-fecha" class="space-y-6">
            <!-- Campo para seleccionar la fecha -->
            <div>
                <label for="anyo_mes_dia" class="block text-sm font-medium text-gray-700 mb-2">Fecha del reporte</label>
                <input type="date"
                       name="anyo_mes_dia"
                       id="anyo_mes_dia"
                       class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                       required />
            </div>

            <!-- Botón para generar el reporte -->
            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 ease-in-out">
                Generar Reporte
            </button>
        </form>
    </div>
</div>
