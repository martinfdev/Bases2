<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reporte Tarjetas de Credito</title>
    <link href="~/css/output.css" rel="stylesheet" /> <!-- Tailwind o CSS que estés usando -->
</head>
<body class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="bg-gray-800 text-white p-4 shadow-md">
        <nav class="container mx-auto flex justify-between items-center">
            <!-- Logo o nombre de la app -->
            <div class="text-2xl font-bold">
                <a href="/" class="hover:text-gray-300">Reporte Tarjetas</a>
            </div>

            <!-- Links de navegación -->
            <div>
                <a href="/" class="text-lg hover:text-gray-300 px-3">Inicio</a>
                <a href="/Reports/ReportByMonth" class="text-lg hover:text-gray-300 px-3">Reporte por Mes</a>
                <a href="/Reports/ReportByDate" class="text-lg hover:text-gray-300 px-3">Reporte por Fecha</a>
            </div>
        </nav>
    </header>

    <!-- Aquí se insertará el contenido de las vistas -->
    <main class="flex-grow">
        @RenderBody() <!-- IMPORTANTE: Aquí es donde se insertan las vistas -->
    </main>

    <!-- Footer pegado al fondo -->
    <footer class="bg-gray-800 text-gray-200 py-6">
        <div class="container mx-auto text-center">
            <p class="text-sm">&copy; 2024 - Vivibanco. Todos los derechos reservados.</p>
            <p class="text-xs mt-2">
                <a href="/privacidad" class="hover:text-gray-400">Política de Privacidad</a> |
                <a href="/terminos" class="hover:text-gray-400">Términos y Condiciones</a>
            </p>
        </div>
    </footer>
</body>
</html>